<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".cliente" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/elige_tu_bebida"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/mixed"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/bmargarita"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView4"
        android:layout_marginTop="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="margarita"
        android:text="@string/MARGARITA"
        android:textSize="12sp" />

    <Button
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:layout_alignTop="@id/textView4"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="cosmopolitan"
        android:text="@string/cosmopolitan"
        android:textSize="12sp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bmargarita"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/botonbeb"
        android:onClick="tequilasunrise"
        android:text="@string/tequila"
        android:textSize="12sp" />

    <Button
        android:id="@+id/alex"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bmargarita"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="alexander"
        android:text="@string/alex"
        android:textSize="12sp" />

    <Button
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/botonbeb"
        android:onClick="pousecafe"
        android:text="@string/pouse" />

    <Button
        android:id="@+id/zombie"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/alex"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="zombie"
        android:text="@string/zombie"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/zombie"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/shots"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/gin"
        android:layout_width="123sp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/shots"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/botonbeb"
        android:onClick="ginytonic"
        android:text="@string/gintonic"
        android:textSize="12sp" />

    <Button
        android:id="@+id/joey"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shots"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="joeysdrink"
        android:text="@string/joey"
        android:textSize="12sp" />

    <Button
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/botonbeb"
        android:onClick="rumycola"
        android:text="@string/rum"
        android:textSize="12sp" />

    <Button
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/joey"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/botonbeb"
        android:onClick="iespick"
        android:text="@string/ies"
        android:textSize="12sp" />


</RelativeLayout>